{
  "name": "thepopebot",
  "version": "1.2.0",
  "type": "module",
  "description": "Create autonomous AI agents with a two-layer architecture: Next.js Event Handler + Docker Agent.",
  "bin": {
    "thepopebot": "./bin/cli.js"
  },
  "main": "api/index.js",
  "exports": {
    "./api": "./api/index.js",
    "./config": "./config/index.js",
    "./instrumentation": "./config/instrumentation.js",
    "./auth": "./lib/auth/index.js",
    "./auth/setup": "./lib/auth/setup.js",
    "./db": "./lib/db/index.js",
    "./chat": "./lib/chat/components/index.js",
    "./chat/actions": "./lib/chat/actions.js"
  },
  "files": [
    "bin/",
    "lib/",
    "api/",
    "config/",
    "setup/",
    "templates/"
  ],
  "scripts": {
    "build": "esbuild lib/chat/components/*.jsx lib/chat/components/ui/*.jsx --outdir=lib/chat/components --format=esm --jsx=automatic --outbase=lib/chat/components",
    "prepublishOnly": "npm run build",
    "local": "bash bin/local.sh",
    "postinstall": "node bin/postinstall.js",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": [
    "ai",
    "agent",
    "autonomous",
    "telegram",
    "bot",
    "claude",
    "nextjs"
  ],
  "author": "Stephen Pope",
  "license": "MIT",
  "dependencies": {
    "@grammyjs/parse-mode": "^2.2.0",
    "@langchain/anthropic": "^1.3.17",
    "@langchain/core": "^1.1.24",
    "@langchain/google-genai": "^2.1.18",
    "@langchain/openai": "^1.2.7",
    "@langchain/langgraph": "^1.1.4",
    "@langchain/langgraph-checkpoint-sqlite": "^1.0.1",
    "bcrypt-ts": "^6.0.0",
    "better-sqlite3": "^12.6.2",
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.44.0",
    "grammy": "^1.39.3",
    "inquirer": "^9.2.12",
    "node-cron": "^3.0.3",
    "open": "^10.0.0",
    "ora": "^8.0.1",
    "uuid": "^9.0.0",
    "zod": "^4.3.6",
    "ai": "^5.0.0",
    "@ai-sdk/react": "^2.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^3.0.0",
    "lucide-react": "^0.400.0"
  },
  "peerDependencies": {
    "next": ">=15.0.0",
    "next-auth": "5.0.0-beta.25",
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "peerDependenciesMeta": {
    "next-auth": {
      "optional": false
    }
  },
  "devDependencies": {
    "esbuild": "^0.24.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
